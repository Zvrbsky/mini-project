<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shopping_list_app">

    <application
        android:name="com.example.shopping_list_app.ProductApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Miniproject">
        <activity
            android:name="com.example.shopping_list_app.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Miniproject.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.shopping_list_app.productList.ProductListActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Miniproject.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.shopping_list_app.addProduct.AddProductActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Miniproject.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.shopping_list_app.productDetail.ProductDetailActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Miniproject.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.shopping_list_app.settings.SettingActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Miniproject.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>